<%- include('partials/head') %>

<div id="main">
    <div class="inner">

        <%- include('partials/header') %>

        <section class="forms">
            <h1 class="mb-5">Ремонт оборудования <%- `"${equipment.subtype} ${equipment.brand} ${equipment.name}"` %>:</h1>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <form id="contact" action="" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <fieldset>
                                        <textarea
                                            rows="8"
                                            name="reason"
                                            placeholder="Введите описание произошедшей проблемы..."
                                            required
                                            autocomplete="off"
                                        ></textarea>
                                    </fieldset>
                                </div>
                                <div class="col-md-12">
                                    <fieldset>
                                        <textarea
                                            rows="8"
                                            name="description"
                                            placeholder="Введите произведенные действия по ремонту оборудования..."
                                            required
                                            autocomplete="off"
                                        ></textarea>
                                    </fieldset>
                                </div>
                                <div class="col-md-12">
                                    <select name="isSuccess">
                                        <option value="true">Ремонт успешен</option>
                                        <option value="false">Ремонт не принес результатов</option>
                                    </select>
                                </div>
                                <div class="col-md-12">
                                    <fieldset>
                                        <button type="submit" id="form-submit" class="button">Подтвердить</button>
                                    </fieldset>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <!-- Tables -->
        <section class="container mt-5">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-heading">
                            <h2>История ремонта оборудования</h2>
                        </div>
                        <% if (equipmentRepairs.length) { %>
                            <div class="alternate-table">
                                <table>
                                    <thead>
                                    <tr>
                                        <th>Дата</th>
                                        <th>Причина</th>
                                        <th>Статус</th>
                                        <th>Опции</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% equipmentRepairs.forEach(function (equipmentRepair) { %>
                                        <tr>
                                            <td><%- equipmentRepair.createdAt %></td>
                                            <td>
                                                <a href="<%- `/equipments/${equipmentRepair.equipment}/repairs/${equipmentRepair._id}` %>">
                                                    <%- equipmentRepair.reason %>
                                                </a>
                                            </td>
                                            <td class="<%= equipmentRepair.isSuccess ? 'badge-success' : 'badge-danger' %>"><%- equipmentRepair.status %></td>
                                            <td>
                                                <a href="/act/repair/<%- equipmentRepair._id %>">
                                                    <div data-v-115389dc="" draggable="true" class="app-icon is-androidL is-custom-size" style="width: 30px; height: 30px; fill: rgb(0, 0, 0);"><!--?xml version="1.0"?--><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">    <path d="M 6 3 L 6 6 L 18 6 L 18 3 L 6 3 z M 5 8 C 3.35 8 2 9.35 2 11 L 2 17 L 6 17 L 6 21 L 18 21 L 18 17 L 22 17 L 22 11 C 22 9.35 20.65 8 19 8 L 5 8 z M 19 10 C 19.6 10 20 10.4 20 11 C 20 11.6 19.6 12 19 12 C 18.4 12 18 11.6 18 11 C 18 10.4 18.4 10 19 10 z M 8 14 L 16 14 L 16 19 L 8 19 L 8 14 z"></path></svg></div>
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="alternate-table">
                                <h3>История ремонта оборудования пуста</h3>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </section>

    </div>
</div>

<%- include('partials/sidebar') %>

<%- include('partials/footer') %>
