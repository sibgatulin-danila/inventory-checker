<%- include('partials/head') %>

<div id="main">
    <div class="inner">

        <%- include('partials/header') %>

        <section class="forms">
            <h1 class="mb-5">Ремонт оборудования <%- `"${equipmentRepair.equipment.subtype} ${equipmentRepair.equipment.brand} ${equipmentRepair.equipment.name}"` %>:</h1>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset>
                                    <textarea
                                        rows="8"
                                        name="reason"
                                        placeholder="Введите описание произошедшей проблемы..."
                                        required
                                        disabled
                                        autocomplete="off"
                                    ><%- equipmentRepair.reason %></textarea>
                                </fieldset>
                            </div>
                            <div class="col-md-12">
                                <fieldset>
                                    <textarea
                                        rows="8"
                                        name="description"
                                        placeholder="Введите произведенные действия по ремонту оборудования..."
                                        required
                                        disabled
                                        autocomplete="off"
                                    ><%- equipmentRepair.description %></textarea>
                                </fieldset>
                            </div>
                            <div class="col-md-6">
                                <fieldset>
                                    <input
                                        class="<%= equipmentRepair.isSuccess ? 'text-success' : 'text-danger' %>"
                                        name="craetedAt"
                                        disabled
                                        placeholder="Введите произведенные действия по ремонту оборудования..."
                                        value="<%- equipmentRepair.createdAt %>"
                                        autocomplete="off"
                                    />
                                </fieldset>
                            </div>
                            <div class="col-md-6">
                                <fieldset>
                                    <input
                                        class="<%= equipmentRepair.isSuccess ? 'text-success' : 'text-danger' %>"
                                        name="isSuccess"
                                        disabled
                                        placeholder="Введите произведенные действия по ремонту оборудования..."
                                        value="<%= equipmentRepair.isSuccess ? 'Исправлено' : 'Не исправлено' %>"
                                        autocomplete="off"
                                    />
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>
</div>

<%- include('partials/sidebar') %>

<%- include('partials/footer') %>
