<%- include('partials/head') %>

<div id="main">
    <div class="inner">

        <%- include('partials/header') %>

        <section class="forms">
            <h1 class="mb-5">Добавление оборудования:</h1>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <form id="contact" action="<%- equipmentsCreateUrl %>" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <select name="type" id="type">
                                        <% equipmentTypes.forEach(function (type, index) { %>
                                            <% if (index === 0)  { %>
                                                    <option value="<%- type._id %>" selected><%- type.name %></option>
                                            <% } else { %>
                                                    <option value="<%- type._id %>"><%- type.name %>></option>
                                            <% } %>
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <input name="name" class="form-control" id="name" placeholder="Наименование..." required="">
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <select name="user" id="user">
                                        <option value="" selected>Пользователь не выбран...</option>
                                        <% users.forEach(function (user) { %>
                                            <option value="<%- user._id %>"><%- user.username %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <input name="inventoryCode" class="form-control" id="inventoryCode" placeholder="Инвентарный номер..." required="">
                                    </fieldset>
                                </div>
                                <div class="col-md-12">
                                    <fieldset>
                                        <textarea name="description" rows="6" class="form-control" id="description" placeholder="Примечание..."></textarea>
                                    </fieldset>
                                </div>
                                <div class="col-md-12">
                                    <fieldset>
                                        <button type="submit" id="form-submit" class="button">Подтвердить</button>
                                    </fieldset>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<%- include('partials/sidebar') %>

<%- include('partials/footer') %>
