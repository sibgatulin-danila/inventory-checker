<div id="main">
    <div class="inner">

        <%- include('partials/header') %>

        <!-- Tables -->
        <section class="forms">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-heading">
                            <h2><%- equipment.name %></h2>
                        </div>
                        <form id="contact" action="<%- equipmentsUpdateUrl %>" method="post">
                            <div class="row">
                                <div class="col-md-6" hidden>
                                    <fieldset hidden>
                                        <input
                                            name="_id"
                                            class="form-control"
                                            id="_id"
                                            placeholder="Наименование..."
                                            hidden
                                            required=""
                                            value="<%- equipment._id %>"
                                        >
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <select name="user" id="user">
                                        <option value="">Сотрудник не выбран</option>
                                        <% users.forEach(function (user) { %>
                                            <option
                                                value="<%- user._id %>"
                                                <%= equipment.user && equipment.user._id.toString() == user._id.toString()
                                                        ? 'selected'
                                                        : '' %>
                                            >
                                                <%- user.username %>
                                            </option>
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <input
                                            name="name"
                                            type="text"
                                            class="form-control"
                                            id="name"
                                            placeholder="Наименование..."
                                            required=""
                                            value="<%- equipment.name %>"
                                        >
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <select name="type" id="type">
                                        <% equipmentTypes.forEach(function (equipmentType, indexParent) { %>
                                            <option
                                                    value="<%- equipmentType._id %>"
                                                    <%= equipment.type._id.toString() == equipmentType._id.toString()
                                                            ? 'selected'
                                                            : '' %>
                                            >
                                                <%- `${indexParent} ${equipmentType.name}` %>
                                            </option>
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <input
                                            name="inventoryCode"
                                            type="text"
                                            class="form-control"
                                            id="inventoryCode"
                                            placeholder="Инвентарный номер"
                                            required=""
                                            value="<%- equipment.inventoryCode %>"
                                        >
                                    </fieldset>
                                </div>
                                <div class="col-12">
                                    <textarea name="description" id="description" placeholder="Примечания..." rows="6"><%- equipment.description %></textarea>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" id="form-submit" class="button">Обновить информацию</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

