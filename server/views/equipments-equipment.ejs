<%- include('partials/head') %>

<div id="main">
    <div class="inner">

        <%- include('partials/header') %>

        <!-- Tables -->
        <section class="forms">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-heading">
                            <h2><%- equipment.name %></h2>
                        </div>
                        <form id="contact" action="<%- equipmentsUpdateUrl %>" method="post">
                            <div class="row">
                                <div class="col-md-6" hidden>
                                    <fieldset hidden>
                                        <input
                                            name="_id"
                                            class="form-control"
                                            id="_id"
                                            placeholder="Наименование..."
                                            hidden
                                            required=""
                                            value="<%- equipment._id %>"
                                        >
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <input type="text" name="type" list="types" placeholder="Введите тип оборудования..." value="<%- equipment.type %>" />
                                        <datalist id="types">
                                            <% usedEquipmentTypes.forEach(function (usedEquipmentType) { %>
                                                <option><%- usedEquipmentType %></option>
                                            <% }) %>
                                        </datalist>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <input type="text" name="subtype" list="subtypes" placeholder="Введите подтип оборудования..." value="<%- equipment.subtype %>" />
                                        <datalist id="subtypes">
                                            <% usedEquipmentSubtypes.forEach(function (usedEquipmentSubtype) { %>
                                                <option><%- usedEquipmentSubtype %></option>
                                            <% }) %>
                                        </datalist>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <input type="text" name="brand" list="brands" placeholder="Введите марку оборудования..." value="<%- equipment.brand %>" />
                                        <datalist id="brands">
                                            <% usedEquipmentBrands.forEach(function (usedEquipmentBrand) { %>
                                                <option><%- usedEquipmentBrand %></option>
                                            <% }) %>
                                        </datalist>
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <input type="text" name="name" placeholder="Введите наименование оборудования..." value="<%- equipment.name %>" />
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <select name="user" id="user">
                                        <option value="">Сотрудник не выбран</option>
                                        <% users.forEach(function (alternativeUser) { %>
                                            <option
                                                value="<%- alternativeUser._id %>"
                                                <%= typeof user != 'undefined' && alternativeUser._id.toString() == user._id.toString()
                                                        ? 'selected'
                                                        : '' %>
                                            >
                                                <%- alternativeUser.username %>
                                            </option>
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <fieldset>
                                        <input
                                            name="inventoryCode"
                                            type="text"
                                            class="form-control"
                                            id="inventoryCode"
                                            placeholder="Инвентарный номер"
                                            required=""
                                            value="<%- equipment.inventoryCode %>"
                                        >
                                    </fieldset>
                                </div>
                                <div class="col-12">
                                    <textarea name="description" id="description" placeholder="Примечания..." rows="6"><%- equipment.description %></textarea>
                                </div>
                                <div class="col-12">
                                    <div class="radio-item">
                                        <input
                                            name="isDeleted"
                                            type="checkbox"
                                            id="isDeleted"
                                            value="true"
                                            <%= equipment.deletedAt ? 'checked' : '' %>
                                        >
                                        <label for="isDeleted">Списать оборудование</label>
                                    </div>
                                </div>
                                <% if (rootUser && rootUser.role === 'admin') { %>
                                <div class="col-md-12">
                                    <button type="submit" id="form-submit" class="button">Обновить информацию</button>
                                </div>
                                <% } %>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<%- include('partials/sidebar') %>

<%- include('partials/footer') %>
