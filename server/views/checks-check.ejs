<%- include('partials/head') %>

<div id="main">
    <div class="inner">

        <%- include('partials/header') %>

        <!-- Tables -->
        <section class="container">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-heading">
                            <h3>Инвентаризация от <%- check.createdAt %></h3>
                            <div class="row mt-5 d-flex">
                                <div class="col-6">
                                    <h2>Учтенное оборудование</h2>
                                </div>
                                <div class="col-6 text-right">
                                    <div>
                                        <a href="/checks/<%- check._id %>/report/checked" target="_blank">
                                            <button>Экспорт</button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="alternate-table">
                            <table>
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Название оборудования</th>
<!--                                    <th>Опции</th>-->
                                </tr>
                                </thead>
                                <tbody>
                                <% equipmentsCheck.forEach(function (equipmentCheck) { %>
                                    <tr>
                                        <td><%- equipmentCheck.equipment.inventoryCode %></td>
                                        <td><%- `${equipmentCheck.equipment.type} ${equipmentCheck.equipment.subtype} ${equipmentCheck.equipment.brand} ${equipmentCheck.equipment.name}` %></td>
<!--                                        <td></td>-->
                                    </tr>
                                <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Tables -->
        <section class="container">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-heading mt-5">
                            <div class="row mt-5 d-flex">
                                <div class="col-6">
                                    <h2>Недостающее оборудование</h2>
                                </div>
                                <div class="col-6 text-right">
                                    <div>
                                        <a href="/checks/<%- check._id %>/report/not-checked" target="_blank">
                                            <button>Экспорт</button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="alternate-table">
                            <table>
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Название оборудования</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% notCheckedEquipments.forEach(function (notCheckedEquipment) { %>
                                    <tr>
                                        <td><%- notCheckedEquipment.inventoryCode %></td>
                                        <td><%- `${notCheckedEquipment.type} ${notCheckedEquipment.subtype} ${notCheckedEquipment.brand} ${notCheckedEquipment.name}` %></td>
                                    </tr>
                                <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>
</div>

<%- include('partials/sidebar') %>

<%- include('partials/footer') %>
