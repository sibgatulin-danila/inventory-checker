<%- include('partials/head') %>

<div id="main">
    <div class="inner">

        <%- include('partials/header') %>

        <section class="forms">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-heading">
                            <h2><%- equipmentType.name %></h2>
                        </div>
                        <form id="contact" action="<%- equipmentTypesUpdateUrl %>" method="post">
                            <div class="row">
                                <div class="col-md-6" hidden>
                                    <fieldset hidden>
                                        <input
                                            name="_id"
                                            class="form-control"
                                            id="_id"
                                            hidden
                                            required=""
                                            value="<%- equipmentType._id %>"
                                        >
                                    </fieldset>
                                </div>
                                <% if (parentEquipmentTypes && parentEquipmentTypes.length) { %>
                                    <div class="col-md-12">
                                        <select name="parent" id="parent">
                                            <option value="">Не выбран тип оборудования</option>
                                            <% parentEquipmentTypes.forEach(function (parentEquipmentType) { %>
                                                <option
                                                    value="<%- parentEquipmentType._id %>"
                                                    <%= equipmentType.parent && equipmentType.parent.toString() == parentEquipmentType._id.toString()
                                                        ? 'selected'
                                                        : '' %>
                                                >
                                                    <%- parentEquipmentType.name %>
                                                </option>
                                            <% }) %>
                                        </select>
                                    </div>
                                <% } %>
                                <div class="col-md-12">
                                    <fieldset>
                                        <input
                                            name="name"
                                            type="text"
                                            class="form-control"
                                            id="name"
                                            placeholder="Наименование..."
                                            required=""
                                            value="<%- equipmentType.name %>"
                                        >
                                    </fieldset>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" id="form-submit" class="button">Обновить информацию</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

<!--        &lt;!&ndash; Tables &ndash;&gt;-->
        <% if (equipmentType.subTypes.length) { %>

            <section class="tables">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="section-heading">
                                <h2>Подтипы оборудования</h2>
                            </div>
                            <div class="default-table">
                                <table>
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Название подтипа</th>
                                        <th>Опции</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        <% equipmentType.subTypes.forEach(function (subEquipmentType, index) { %>
                                            <tr>
                                                <td><%- index %></td>
                                                <td><%- subEquipmentType.name %></td>
                                                <td>
                                                    <a href="/equipments/types/<%- subEquipmentType._id %>">
                                                        Обновить
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        
        <% } %>
        
