        <section class="forms">
            <h1 class="mb-5">Добавление оборудования:</h1>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <form id="contact" action="<%-  %>" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <fieldset>
                                        <input
                                            type="text"
                                            placeholder="Введите наименование оборудования..."
                                            required="on"
                                            disabled
                                            value="<%= equipmentUser.user ? equipmentUser.user.username : 'Ответственный пользователь не назначен' %>"
                                            autocomplete="off"
                                        />
                                    </fieldset>
                                </div>
                                <div class="col-md-6">
                                    <select name="user" id="user">
                                        <option value="" selected>Ответственный отсутствует</option>
                                        <% users.forEach (function (user) { %>
                                            <option value="<%- user._id %>"><%- user.username %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="col-md-12">
                                    <fieldset>
                                        <button type="submit" id="form-submit" class="button">Подтвердить</button>
                                    </fieldset>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

